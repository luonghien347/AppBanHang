<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F2"
    tools:context=".activity.SapXepSanPhamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF249B0F"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSapxepSPMoi"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_weight="1"
            android:background="#FF249B0F"
            app:title="Sản phẩm mới nhất"
            app:titleTextColor="#FCFCFA"></android.support.v7.widget.Toolbar>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewSapXepSpMoi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>