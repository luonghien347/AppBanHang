<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminSanPhamActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF249B0F"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarAdminSanPham"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_weight="1"
            android:background="#FF249B0F"
            app:title="Sản phẩm"
            app:titleTextColor="#FCFCFA"></android.support.v7.widget.Toolbar>

    </LinearLayout>


    <Spinner
        android:layout_gravity="center"
        android:id="@+id/spinnerListMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <TextView
        android:id="@+id/textviewAdminTenMenu"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Danh sách sản phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <ListView
        android:id="@+id/listviewAdminSanPham"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>